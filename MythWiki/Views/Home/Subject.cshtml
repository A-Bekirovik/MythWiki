@model MythWikiBusiness.Models.Subject

@{
    ViewData["Title"] = "Subject Details";
}

<div class="container my-5">
    <h1 class="display-4">@Model.Title</h1>
    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <p class="card-text">@Model.Text</p>
                </div>
                <div class="card-footer">
                    <a class="Button">Privacy</a>
		        </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="@Model.Image" class="card-img-top" alt="Afbeelding">
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Other Chats</h5>
                    <p class="card-text">Chatbar</p>
                </div>
            </div>
        </div>
    </div>
</div>
